{
  "name": "holiday-calendar-fe",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": ".",
  "build": {
    "extends": null,
    "appId": "com.yourcompany.holidaycalendar",
    "productName": "HolidayCalendarApp",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "../holiday_calendar_BE/dist/**/*",
      "../holiday_calendar_BE/data/**/*"
    ],
    "extraResources": [
      {
        "from": "../holiday_calendar_BE/data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../holiday_calendar_BE/dist",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./node.exe",
        "to": "node.exe"
      },
      {
        "from": "../holiday_calendar_BE/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.6.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@tosspayments/payment-widget-sdk": "^0.12.0",
    "@tosspayments/tosspayments-sdk": "^2.3.4",
    "axios": "^1.8.4",
    "bootstrap": "^5.3.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.9",
    "react-cookie": "^8.0.1",
    "react-dom": "^18.3.1",
    "react-modal": "^3.16.3",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.30.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^35.7.0",
    "electron-builder": "^26.0.12"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "electron:dev": "npm run build && electron .",
    "dist": "electron-builder",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
